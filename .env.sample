# OpenAlgo Configuration
OPENALGO_API_KEY=your_openalgo_api_key_here

# For local development (non-Docker):
# OPENALGO_HOST=http://127.0.0.1:5000
# OPENALGO_WS_URL=ws://127.0.0.1:8765

# For Docker: These are overridden by docker-compose.yaml environment section
# (uses http://openalgo:5000 and ws://openalgo:8765)

# Trading Configuration
PAPER_TRADING=true  # CRITICAL: Set to false only after thorough testing
TOTAL_CAPITAL=10000000  # 1 Crore
R_VALUE=6500
MAX_POSITIONS=5
MAX_LOTS_PER_POSITION=10

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Logging
LOG_LEVEL=INFO

# Docker-specific (for docker-compose)
EXPIRY=30JAN26
ATM=23500
